<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MSP_Lab.Views"
             x:Class="MSP_Lab.Views.GalleryPage"
             Title="Галерея">
    <ContentPage.ToolbarItems>
        <ToolbarItem IconImageSource="icon_plus.png" Order="Primary" Clicked="OnAddItem"/>
        <ToolbarItem IconImageSource="icon_refresh.png" Order="Primary" Clicked="OnRefresh"/>
    </ContentPage.ToolbarItems>
    
    <ContentPage.Content>
        <StackLayout>
            <ScrollView>
                <local:GalleryGridLayout HorizontalOptions="FillAndExpand" x:Name="galleryLayout" Margin="5">
                    
                </local:GalleryGridLayout>
            </ScrollView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>